<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/navigationheader_background">
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:id="@+id/sample_image"
        android:background="@mipmap/add_icon_3"
        app:layout_constraintLeft_toRightOf="@+id/balance_text"
        app:layout_constraintTop_toBottomOf="@id/balance_text" />

    <TextView
        android:id="@+id/balance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="64dp"
        android:text="Account Balance"
        android:textColor="#29D8FF"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="28dp"
        android:drawableLeft="@mipmap/dollar"
        android:text="  \n 5214.98"
        android:textColor="@android:color/white"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/sample_image"
        app:layout_constraintTop_toBottomOf="@id/balance_text"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>